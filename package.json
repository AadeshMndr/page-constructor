{
  "name": "@yandex-data-ui/page-constructor",
  "version": "1.0.0",
  "description": "Cloud Page Constructor",
  "author": "DataUI Team <data-ui@yandex-team.ru>",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git@github.yandex-team.ru:data-ui/page-constructor.git"
  },
  "files": [
    "build",
    "styles"
  ],
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "main": "build/cjs/index.js",
  "module": "build/esm/index.js",
  "typings": "build/esm/index.d.ts",
  "scripts": {
    "deps:install": "npm ci",
    "deps:truncate": "npm prune --production",
    "lint:js": "eslint .",
    "lint:styles": "stylelint ./styles/**/*.scss ./src/**/*.scss",
    "lint:prettier": "prettier --check --loglevel=error '**/*.{js,jsx,ts,tsx,scss}'",
    "lint": "npm-run-all --parallel lint:*",
    "typecheck": "tsc --noEmit",
    "dev": "npm run storybook:start",
    "start": "node dist",
    "build:compile": "tsc -p tsconfig.publish.json",
    "build": "NODE_OPTIONS=\"--max-old-space-size=4096\" ui-core build",
    "storybook:start": "start-storybook -p 7009",
    "storybook:build": "build-storybook -c .storybook -o storybook-static",
    "docker:build": "docker build . -t registry.yandex.net/data-ui/page-constructor:${npm_package_version}",
    "docker:push": "docker push registry.yandex.net/data-ui/page-constructor:${npm_package_version}",
    "docker:release": "ya tool dctl release docker --release-type stable -t ${npm_package_version} data-ui/page-constructor",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "prepare": "husky install"
  },
  "dependencies": {
    "bem-cn-lite": "^4.0.0",
    "lodash": "^4.17.21"
  },
  "peerDependencies": {
    "@yandex-data-ui/common": "^8.0.0",
    "@yandex-data-ui/i18n": "^0.12.0",
    "react": "^16.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@storybook/addon-actions": "^5.3.19",
    "@storybook/addon-knobs": "^5.3.19",
    "@storybook/react": "^5.3.19",
    "@types/lodash": "^4.14.159",
    "@types/react": "^16.9.46",
    "@yandex-data-ui/common": "^8.28.7",
    "@yandex-data-ui/i18n": "^0.12.3",
    "@yandex-data-ui/tsconfig": "^0.4.0",
    "@yandex-data-ui/ui-core": "^1.5.1",
    "@yandex-data-ui/webpack-levels": "^2.1.0",
    "eslint": "^7.27.0",
    "eslint-config-data-ui": "^11.1.1",
    "eslint-plugin-local": "./eslint-plugin-local",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.2.1",
    "prettier-config-data-ui": "^1.0.2",
    "react-router-dom": "^5.2.0",
    "storybook-host": "^5.1.0",
    "storybook-readme": "^5.0.8",
    "stylelint": "^13.13.1",
    "stylelint-config-data-ui": "^1.0.4",
    "stylelint-scss": "^3.18.0",
    "typescript": "^4.2.3"
  },
  "lint-staged": {
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --fix-type problem --quiet",
      "prettier --write"
    ]
  },
  "preview-generator": {
    "prepare": [
      "npm i @yandex-data-ui/core",
      "npm run storybook:build",
      "rm -rf dist/public",
      "mv storybook-static dist/public",
      "mkdir -p dist/run"
    ],
    "env": {
      "NODE_ENV": "production"
    }
  },
  "ui-core": {
    "lib": {
      "internalDirs": [
        "stories",
        "demo",
        "internal-typings",
        "**/__stories__"
      ]
    }
  }
}
